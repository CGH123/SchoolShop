<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:clickable="true"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="145dp">

    <RelativeLayout
        android:id="@+id/his_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/his_images"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="17dp"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:placeholderImageScaleType="fitXY" />

        <TextView
            android:id="@+id/his_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/his_images"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/his_images"
            android:text="一锅个泡面一锅个泡面个泡个泡个泡"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/his_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/his_name"
            android:layout_below="@+id/his_name"
            android:layout_marginTop="45dp"
            android:text="$15元"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/his_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/his_price"
            android:layout_marginEnd="21dp"
            android:text="已确认"
            android:textColor="@color/green"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/his_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/his_state"
            android:layout_alignTop="@+id/his_name"
            android:text="3月2号"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            fresco:srcCompat="@mipmap/ic_go_dark" />

    </RelativeLayout>

</android.support.v7.widget.CardView>